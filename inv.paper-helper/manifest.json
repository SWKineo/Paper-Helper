{
  "name": "Paper Helper (Invisible)",
  "version": "1.4",
  "manifest_version": 3,
  "description": "Open abstracts and PDFs for tasks",

  "background": {
    "service_worker": "helper.js"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "inv-16.png",
    "32": "inv-32.png",
    "48": "inv-48.png",
    "64": "inv-64.png",
    "128": "inv-128.png"
  },

  "permissions": [
      "contextMenus"
  ]
}